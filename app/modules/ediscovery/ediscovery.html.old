<div class="ediscovery-search centered">

  <div class="main-heading">
    <h1 translate="ediscovery.searchHeading"></h1>
    <span class="help" ng-click="ediscoveryCtrl.showSearchHelp()">
      {{'ediscovery.searchHelp' | translate}}<i class="icon icon-help"></i>
    </span>

  </div>

  <div class="typeahead-large">
    <form class="searchInputForm">
      <input id="searchInput" type="search"
             tabindex="1"
             placeholder=""
             autocomplete="off"
             ng-model="ediscoveryCtrl.searchStatus.string"
             autofocus="true"/>

      <button type="submit" tabindex="-1" class="btn btn--circle btn--primary icon icon-search"
              ng-click="ediscoveryCtrl.search()" ng-disabled="ediscoveryCtrl.searchStatus.string == ''"></button>
    </form>

    <div class="input-description"></div>
  </div>

  <div class="search-result">


    <div ng-show="ediscoveryCtrl.searchStatus.initialReport === '' ">
      <span><i class="icon icon-spinner icon-2x"></i></span>
      <p translate="ediscovery.searchingPleaseWait"></p>
    </div>


    <div ng-show="ediscoveryCtrl.searchStatus.initialReport">
      <p>Found entries: {{ediscoveryCtrl.searchStatus.initialReport.items}}</p>

        <!--
        <span ng-show="ediscoveryCtrl.searchStatus.progress < 100"><i class="icon icon-spinner icon-2x"></i></span><br>
        -->

        <table>
        <tr ng-repeat="report in ediscoveryCtrl.reports">
          <td>{{report.id}}</td>
          <td>{{report.name}}</td>
          <td>{{report.progress}} %</td>
          <td ng-show="report.progress === 100">[CLICK TO DOWNLOAD FULL REPORT]</td>

        </tr>
        </table>




    </div>


  </div>





</div>
