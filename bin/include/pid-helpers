# get list of PIDs for all matching processes (complete name, no substrings)
function get_pids {
    local grepex="\b$1\b"
    # shellcheck disable=SC2009
    ps aux | grep -e "$grepex" | grep -v grep | awk '{print $2;}'
}

# kill list of PIDs (reattempt 'max_retry_count'-times, then use `kill -9`)
function kill_wait {
    local proc_to_kill="$1"
    local pids=
    pids=$(get_pids "$proc_to_kill")
    # shellcheck disable=SC2086
    kill_wait_pids $pids
}

function kill_wait_pids {
    local max_retry_count=5
    local i=0

    pids=$*
    if [ -z "$pids" ]; then
        echo "[INFO] no pids to kill, quitting."
        return
    fi

    echo "[INFO] pids to kill: $pids"
    # shellcheck disable=SC2086
    kill $pids 2>/dev/null
    sleep 2

    # shellcheck disable=SC2086
    while ps -o pid= -p $pids; do
        let "i+=1"
        echo "[INFO] trying again ($i)"
        if [ $i -lt $max_retry_count ]; then
            kill $pids 2>/dev/null
        else
            echo "[INFO] max retries reached, force killing: $pids"
            kill -9 $pids 2>/dev/null
        fi

        sleep 2
    done
}
